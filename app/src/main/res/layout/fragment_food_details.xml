<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailPage.FoodDetails">


    <ImageView
        android:id="@+id/food_image_detail"
        android:layout_width="0dp"
        android:layout_height="181dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image" />

    <TextView
        android:id="@+id/food_name_detail"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:paddingStart="16dp"
        android:paddingEnd="6dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/food_image_detail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cuisine_type"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="italian"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/food_name_detail" />

    <TextView
        android:id="@+id/total"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="4568"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:gravity="end"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/cuisine_type"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/total_kcal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:text="Kcal"
        app:layout_constraintBaseline_toBaselineOf="@id/total"
        app:layout_constraintStart_toEndOf="@id/total" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="222dp"
        android:layout_height="175dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_name_detail">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/green_circle" />

            <TextView
                android:id="@+id/protein"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:paddingStart="12dp"
                android:paddingEnd="2dp"
                android:text="Protein"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/protein_g"
                android:layout_width="70dp"
                android:layout_height="30dp"

                android:text="500"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/orange_circle" />

            <TextView
                android:id="@+id/fat"
                android:layout_height="30dp"
                android:paddingStart="12dp"
                android:paddingEnd="2dp"
                android:text="Fat"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fat_g"
                android:height="30dp"
                android:text="400"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/red_circle" />

            <TextView
                android:id="@+id/carb"
                android:layout_height="30dp"
                android:paddingStart="12dp"
                android:paddingEnd="2dp"
                android:text="Carb"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/carb_g"
                android:layout_height="30dp"
                android:text="300"
                android:textSize="20sp" />

        </TableRow>

    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/recycler_view_detail"/>


</androidx.constraintlayout.widget.ConstraintLayout>